<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/main"
    android:background="@drawable/weather1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView">

            <LinearLayout
                android:id="@+id/left_side_bar"
                android:orientation="vertical"
                android:layout_width="180dp"
                android:layout_height="100dp">

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="900dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/linearLayout"
        android:layout_toEndOf="@+id/linearLayout">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/date"
            android:textSize="20pt"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/city_name"
            android:layout_alignStart="@+id/city_name" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/city_name"
            android:textSize="36pt"
            android:layout_below="@+id/date"
            android:layout_alignLeft="@+id/weather"
            android:layout_alignStart="@+id/weather" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="白天"
            android:textSize="20pt"
            android:id="@+id/morning"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="24pt"
            android:id="@+id/morning_temperature"
            android:layout_below="@+id/morning"
            android:layout_alignLeft="@+id/night"
            android:layout_alignStart="@+id/night"
            android:layout_marginLeft="79dp"
            android:layout_marginStart="79dp" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="晚上"
            android:textSize="20pt"
            android:id="@+id/night"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/morning"
            android:layout_alignStart="@+id/morning" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="24pt"
            android:id="@+id/night_temperature"
            android:layout_below="@+id/night"
            android:layout_alignLeft="@+id/morning_temperature"
            android:layout_alignStart="@+id/morning_temperature" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="天氣概況"
            android:textSize="20pt"
            android:id="@+id/weather"
            android:layout_above="@+id/weather_detail"
            android:layout_toLeftOf="@+id/morning_temperature"
            android:layout_toStartOf="@+id/morning_temperature" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="36pt"
            android:id="@+id/weather_detail"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail"
            android:id="@+id/city_detail"
            android:layout_below="@+id/city_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</RelativeLayout>
